{
  "order": 1,
  "index_patterns": [
    "pa-system*"
  ],
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 1,
    "index.lifecycle.name": "ping-2-day-retention",     
    "index.lifecycle.rollover_alias": "pa-system"   
  },
  "mappings": {
    "properties": {
      "geoip": {
        "dynamic": true,
        "properties": {
          "ip": {
            "type": "ip"
          },
          "latitude": {
            "type": "half_float"
          },
          "location": {
            "type": "geo_point"
          },
          "longitude": {
            "type": "half_float"
          }
        }
      }
    }
  }
}